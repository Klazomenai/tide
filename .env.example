# TIDE - Token Issuance for Developer Environments
# Copy this file to .env and fill in your values

# Network
TIDE_RPC_ENDPOINT=https://rpc.example.autonity.org/
TIDE_CHAIN_ID=
TIDE_BLOCK_EXPLORER_URL=https://explorer.example.autonity.org

# Wallet
TIDE_WALLET_PROVIDER=env          # env | kubernetes | file
TIDE_WALLET_PRIVATE_KEY=          # hex private key (if provider=env)
TIDE_WALLET_PRIVATE_KEY_FILE=     # path to key file (if provider=file)

# Faucet limits
TIDE_MAX_ATN=5.0
TIDE_MAX_NTN=50.0
TIDE_DAILY_LIMIT=10
TIDE_COOLDOWN_MINUTES=60

# CDP (Collateralized Debt Position)
TIDE_CDP_MODE=auto                # auto | manual | disabled
TIDE_CDP_AUTO_OPEN=false
TIDE_CDP_TARGET_CR=2.5
TIDE_CDP_MIN_CR=2.2
TIDE_CDP_MAX_CR=3.0
TIDE_CDP_CHECK_INTERVAL_MINUTES=5
TIDE_CDP_EMERGENCY_ACTION=alert   # alert | repay | pause

# Slack
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret

# Redis
REDIS_URL=redis://localhost:6379

# Observability
TIDE_METRICS_PORT=8080
TIDE_LOG_LEVEL=INFO
TIDE_LOG_FORMAT=json              # json | text
